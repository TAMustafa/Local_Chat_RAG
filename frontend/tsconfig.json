{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "baseUrl": "./src",
      "paths": {
        "components/*": ["components/*"],
        "state/*": ["state/*"],
        "api/*": ["api/*"]
      }
    },
    "include": ["src"]
  }